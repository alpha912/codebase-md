{
  "name": "codebase-md",
  "displayName": "CodebaseMD",
  "description": "Export your entire codebase or selected files as a Markdown file.",
  "version": "1.0.1",  // Increment the version number
  "publisher": "alpha912",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:codebaseMD.exportAll",
    "onCommand:codebaseMD.exportSelected"
  ],
  "main": "./out/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/alpha912/codebase-md.git"
  },
  "license": "MIT", 
  "icon": "assets/logo.webp",  // Add this line to reference your logo
  "contributes": {
    "commands": [
      {
        "command": "codebaseMD.exportAll",
        "title": "Export Codebase as Markdown"
      },
      {
        "command": "codebaseMD.exportSelected",
        "title": "Export Selected as Markdown"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "codebaseMD.exportSelected",
          "when": "explorerResourceIsFoÂ­lder || resourceFilename",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "^16.18.11",
    "@types/vscode": "^1.70.0",
    "typescript": "^4.8.4",
    "vsce": "^2.7.0"
  },
  "dependencies": {
    "ignore": "^5.3.2"
  }
}
